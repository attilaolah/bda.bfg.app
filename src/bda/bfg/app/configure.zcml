<configure xmlns="http://namespaces.repoze.org/bfg">

  <include package="repoze.bfg.includes" />
  
  <scan package=".views" />
  
  <view
    for="*"
    view=".views.static_view"
    name="static"
  />
  
  <authtktauthenticationpolicy
    secret="secret"
    cookie_name="__ac__"
    secure="false"
    include_ip="false"
    callback=".authentication.groupcallback"
  />
  
  <aclauthorizationpolicy />

</configure>