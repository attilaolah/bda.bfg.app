<form id="${context.formname}"
      action="${context.formaction}"
      method="post">

  <h1>Log In</h1>
  <label for="login">Username:</label>
  <tal:input replace="structure context.textinput('login')" />
  <br />
  <label for="password">Password:</label>
  <tal:input replace="structure context.passwordinput('password')" />
  <tal:input replace="structure context.hiddeninput('__do_login', 'true')" />
  <tal:action replace="structure context.renderedaction('login')" />

</form>