<ul>
    <li tal:repeat="item context.menuitems">
      <a href=""
         tal:define="css item['first'] and 'first' or '';
                     css item['selected']
                         and ' '.join([css, 'current_page_item'])
                         or css;
                     css ' '.join([css, 'mainmenulink']);"
         tal:attributes="class css;
                         href item['url']"
         tal:content="item['title']">Title</a>
    </li>
</ul>