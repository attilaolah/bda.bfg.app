<form id="${context.formname}"
      action="${context.formaction}">

  <h5>Unicodefield</h5>
  <tal:input replace="structure context.textinput('unicodefield')" />

  <h5>Strfield</h5>
  <tal:input replace="structure context.textinput('strfield')" />

  <h5>Intfield</h5>
  <tal:input replace="structure context.textinput('intfield')" />

  <h5>Floatfield</h5>
  <tal:input replace="structure context.textinput('floatfield')" />
  
  <tal:action replace="structure context.renderedaction('default')" />
  <tal:action replace="structure context.renderedaction('cancel')" />

</form>