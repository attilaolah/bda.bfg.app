<html xmlns="http://www.w3.org/1999/xhtml">
  <head>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title tal:content="model.root.title"></title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />

    <!-- javascripts -->
    <script src="${request.application_url}/static/js/sarissa.js" type="text/javascript"></script>
    <script src="${request.application_url}/static/js/base2-dom-fp.js" type="text/javascript"></script>
    <script src="${request.application_url}/static/js/jquery-1.3.2.min.js" type="text/javascript"></script>
    <script src="${request.application_url}/kss.js" type="text/javascript"></script>
    <script src="${request.application_url}/static/js/bda.bfg.app.js" type="text/javascript"></script>

    <!-- stylesheets -->
    <link href="${request.application_url}/static/style.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="${request.application_url}/bda.bfg.app.css" rel="stylesheet" type="text/css" media="screen" />
    
    <!-- kss resources -->
    <link href="${request.application_url}/bda.bfg.app.kss" type="text/css" rel="kinetic-stylesheet"/>

  </head>
  <body>
    <div id="wrapper">
      
      <div id="logo">
        <h1>
          <a href="${request.application_url}"
             class="logolink"
             tal:content="model.root.title">Title</a>
        </h1>
        <p><em> by BlueDynamics Alliance</em></p>
      </div>
      <hr />

      <div id="header">
        
        <div id="menu">
          <tal:mainmenu replace="structure tile('mainmenu')" />
        </div>

        <div id="search">
          <form method="get" action="">
            <fieldset>
              <input type="text" name="s" id="search-text" size="15" />
              <input type="submit" id="search-submit" value="GO" />
            </fieldset>
          </form>
        </div>
      </div>

      <div id="page">
        
        <div id="page-bgtop">
          
          <div id="content">
            <tal:content
              replace="structure tile('content')"
              condition="authenticated"
             />
             <tal:content
              replace="structure tile('loginform')"
              condition="not authenticated"
             />
          </div>
          
          <div id="sidebar">
            <ul id="navtree">
              <tal:navtree replace="structure tile('navtree')" />
            </ul>
            <ul id="personaltools">
              <tal:navtree replace="structure tile('personaltools')" />
            </ul>
          </div>
          
          <div style="clear: both;">&nbsp;</div>
        </div>
      </div>
      
      <div id="footer">
        <p>
          Copyright (c) 2009
          <a href="http://www.bluedynamics.eu/">BlueDynamics Alliance</a>.
          All rights reserved. Design by
          <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>.
        </p>
      </div>
      
    </div>
  </body>
</html>
